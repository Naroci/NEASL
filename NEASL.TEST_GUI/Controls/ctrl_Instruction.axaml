<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="80"
             x:Class="NEASL.TEST_GUI.Controls.ctrl_Instruction">
    <Border Background="LightYellow" CornerRadius="15" BorderBrush="DarkKhaki" BorderThickness="1">
        <Grid RowDefinitions="Auto,*">
            <Grid ColumnDefinitions="*,Auto">
                <Label Content="Name" Margin="5" />
                <Button Grid.Column="1" CornerRadius="25" Margin="5" />
            </Grid>
        </Grid>
    </Border>
</UserControl>